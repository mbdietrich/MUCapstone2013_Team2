<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <listener>
        <description>HttpSessionListener</description>
        <listener-class>capstone.server.SessionCleanupService</listener-class>
    </listener>
    <servlet>
        <servlet-name>PlayerJoin</servlet-name>
        <servlet-class>capstone.server.PlayerJoin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FriendManager</servlet-name>
        <servlet-class>capstone.server.FriendManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileManager</servlet-name>
        <servlet-class>capstone.server.ProfileManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPublicGames</servlet-name>
        <servlet-class>capstone.server.GetPublicGames</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FacebookManager</servlet-name>
        <servlet-class>capstone.server.FacebookManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlayerJoin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Leave</servlet-name>
        <servlet-class>capstone.server.Leave</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Leave</servlet-name>
        <url-pattern>/leave</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Join</servlet-name>
        <servlet-class>capstone.server.GameJoin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Join</servlet-name>
        <url-pattern>/join</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GameCreate</servlet-name>
        <servlet-class>capstone.server.GameCreate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GameCreate</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GameStateGet</servlet-name>
        <servlet-class>capstone.server.GameStateGet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GameStateGet</servlet-name>
        <url-pattern>/state</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MakeMove</servlet-name>
        <servlet-class>capstone.server.MakeMove</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MakeMove</servlet-name>
        <url-pattern>/move</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FriendManager</servlet-name>
        <url-pattern>/FriendManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileManager</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPublicGames</servlet-name>
        <url-pattern>/GetPublicGames</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FacebookManager</servlet-name>
        <url-pattern>/facebook</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            5
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
